        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customer.place)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="customer.ID" />
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
            Löschen
        </button>
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Datensatz wirklich löschen ?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger" role="alert">
                            Möchten Sie den Kunden wirklich löschen ?
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button> |
                        <input type="submit" value="Löschen" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
   
       | <a class="btn btn-primary" asp-page="Index">Zurück zur Liste</a>
    </form>
</div>
