@page
@model Eventmanagement4._0.Pages.customer_base.CreateModel

@{
    ViewData["Title"] = "Create";
}

<br />

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Startseite</a></li>
        <li class="breadcrumb-item"><a href="#">Kundenstammverwaltung</a></li>
        <li class="breadcrumb-item active" aria-current="page">Datensatz erstellen</li>
    </ol>
</nav>
<div class="container-fluid">

        <div class="col-md-8">
            <form method="post">
                <div class="form-row">
                    <div class="col">
                        <div class="card bg-light">
                            <h5 class="card-header">Allgemeine Daten</h5>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="customer.customer_id" class="control-label"></label>
                                    <input asp-for="customer.customer_id" class="form-control" />
                                    <span asp-validation-for="customer.customer_id" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="customer.customer_name" class="control-label"></label>
                                    <input asp-for="customer.customer_name" class="form-control" />
                                    <span asp-validation-for="customer.customer_name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="customer.telefphone_number" class="control-label"></label>
                                    <input asp-for="customer.telefphone_number" class="form-control" />
                                    <span asp-validation-for="customer.telefphone_number" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card bg-light">
                            <h5 class="card-header">Anschrift</h5>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="customer.land" class="control-label"></label>
                                    <input asp-for="customer.land" class="form-control" />
                                    <span asp-validation-for="customer.land" class="text-danger"></span>
                                    <label asp-for="customer.place" class="control-label"></label>
                                    <input asp-for="customer.place" class="form-control" />
                                    <span asp-validation-for="customer.place" class="text-danger"></span>
                                    <label asp-for="customer.post_code" class="control-label"></label>
                                    <input asp-for="customer.post_code" class="form-control" />
                                    <span asp-validation-for="customer.post_code" class="text-danger"></span>
                                    <label asp-for="customer.street" class="control-label"></label>
                                    <input asp-for="customer.street" class="form-control" />
                                    <span asp-validation-for="customer.street" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="customer.website" class="control-label"></label>
                    <input asp-for="customer.website" class="form-control" />
                    <span asp-validation-for="customer.website" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Datensatz erstellen" class="btn btn-success" /> |
                    <a class="btn btn-primary" asp-page="Index">Zurück zur Liste</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

